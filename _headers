# Netlify custom headers for Mantik
# SEO and performance optimization (netlify.toml [[headers]] also applies)

# Default: security + no cache for HTML
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  Cache-Control: public, max-age=0, must-revalidate
  
# Static assets with long cache (versioned via content hash)
/media/*
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

/*.png
  Cache-Control: public, max-age=31536000, immutable

# CSS with moderate caching (1 day) - allows updates
/styles.css
  Cache-Control: public, max-age=86400

# JavaScript with moderate caching (1 day) - allows updates
/js/*
  Cache-Control: public, max-age=86400

# JSON data files - moderate caching for content
/data/*
  Cache-Control: public, max-age=3600
  Access-Control-Allow-Origin: *

# Sitemap and robots with short cache
/sitemap.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml

/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain

# Preload hints for critical resources (applied to index.html)
/index.html
  Cache-Control: public, max-age=0, must-revalidate
  Link: </styles.css>; rel=preload; as=style
  Link: </js/app-state.js>; rel=preload; as=script
  Link: </js/config-manager.js>; rel=preload; as=script
  Link: </media/FRCCodeLabDark.svg>; rel=preload; as=image; type=image/svg+xml
  Link: <https://fonts.googleapis.com>; rel=preconnect
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin

# Root path same as index.html
/
  Cache-Control: public, max-age=0, must-revalidate
  Link: </styles.css>; rel=preload; as=style
  Link: </js/app-state.js>; rel=preload; as=script
